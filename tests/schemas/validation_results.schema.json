{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["model_path", "baseline_model", "intrinsic_validation", "extrinsic_validation", "summary"],
  "properties": {
    "model_path": {"type": "string"},
    "baseline_model": {"type": ["string", "null"]},
    "intrinsic_validation": {
      "type": "object",
      "properties": {
        "embeddings": {
          "type": "object",
          "properties": {
            "perplexity": {"type": "number", "minimum": 0},
            "baseline_perplexity": {"type": ["number", "null"], "minimum": 0},
            "delta": {"type": "number"}
          },
          "additionalProperties": true
        },
        "attention_patterns": {"type": "object"},
        "ffn_clusters": {"type": "object"}
      },
      "additionalProperties": true
    },
    "extrinsic_validation": {
      "type": "object",
      "properties": {
        "general_benchmarks": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "summary": {
      "type": "object",
      "required": ["overall_score", "component_scores", "recommendations"],
      "properties": {
        "overall_score": {"type": "number", "minimum": 0, "maximum": 1},
        "component_scores": {"type": "object"},
        "recommendations": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
